{
  "name": "@tomnagengast/ralph",
  "version": "0.0.1",
  "description": "Ralph - The Loop Controller",
  "type": "module",
  "bin": {
    "ralph": "./src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "mkdir -p dist && bun build ./src/index.ts --compile --outfile dist/ralph",
    "lint": "biome check . --write",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "src",
    "run-template",
    "AGENTS.md",
    "review-schema.json"
  ],
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@biomejs/biome": "^2.3.5",
    "@iarna/toml": "^2.2.5",
    "ansi-escapes": "^7.0.0",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-highlight": "^2.1.11",
    "marked": "^12.0.1",
    "wrap-ansi": "^9.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "bun-types": "^1.3.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.2"
  }
}
